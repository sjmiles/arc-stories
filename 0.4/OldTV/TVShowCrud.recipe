import 'data/TVShow.schema'

//---------------------------------
// For communicating with the Shell
//---------------------------------

schema Theme
  Text mainBackground
  Text mainColor
  Text title
  Text key

particle ShellTheme in 'source/ShellTheme.js'
  inout Theme theme

//---------------------------------
// Search API
//---------------------------------

particle FindTVShows in 'source/FindTVShows.js'
  inout [TVShow] shows
  consume root
  description `find tv shows`

//---------------------------------
// Generic Display Tools
//---------------------------------

import 'https://$cdn/artifacts/Common/List.manifest'
import 'https://$cdn/artifacts/Common/Detail.manifest'

//---------------------------------
// Various TVShow Specific Bits
//---------------------------------

import 'data/TVShow.schema'

particle TVShowTile in 'source/TVShowTile.js'
  in TVShow show
  consume tile
    provide set of action

particle TVShowPanel in 'source/TVShowPanel.js'
  in TVShow show
  consume content
    provide action
    provide episodes

import 'TVEpisodes.manifest'
import 'TVShowActionBar.manifest'

//=================================
// Main Recipe
//=================================

recipe ManageTVShows
  use #shelltheme as theme
  create #shows as shows
  create as selected
  //create as episodes

  //---------------------------------
  // Communication with Shell
  //---------------------------------

  ShellTheme
    theme = theme

  //---------------------------------
  // TV Show Search
  //---------------------------------

  FindTVShows
    shows = shows

  //=================================
  // Main TV Tile Panel
  //---------------------------------
  // Generic Item Arranger
  //---------------------------------

  SelectableTileList
    items = shows
    selected = selected
    consume root
      provide tile

  //---------------------------------
  // Adapter Between Item Arranger (SelectableTileList) and Item Renderer (TVShowTile)
  //---------------------------------
  TileMultiplexer
    list = shows
    hostedParticle = TVShowTile
    consume tile
