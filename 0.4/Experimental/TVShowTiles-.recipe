//---------------------------------
// TVShow Schema
//---------------------------------

import '../TV/data/TVShow.schema'

//---------------------------------
// Generic Display Tools
//---------------------------------

import 'https://$cdn/artifacts/Common/List.manifest'

//---------------------------------
// TVShowTile
//---------------------------------

particle TVShowTile in '../TV/source/TVShowTile.js'
  in TVShow show
  consume item
    provide set of action

//store TVShowTileHost of HostedParticleShape in 'TVShowTile.json'

//---------------------------------
// Tiled List Display
//---------------------------------

recipe ShowTVTiles
  use #shows as shows
  create #selected as selected
  SelectableTileList
    items = shows
    selected = selected
    consume root
      provide tile
  TileMultiplexer
    list = shows
    hostedParticle = TVShowTile
    consume tile
