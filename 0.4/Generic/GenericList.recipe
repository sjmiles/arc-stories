//---------------------------------
// Generic Display Tools
//---------------------------------

import 'https://$shell/artifacts/Common/List.manifest'

//---------------------------------
// List Display
//---------------------------------

recipe SelectableList
  ? #items as items
  create #selected as selected
  SelectableList
    items = items
    selected = selected
    consume root
      provide item
  description `list that can contain ${SelectableList.items}`

//---------------------------------
// Tiled List Display (Selectable)
//---------------------------------

recipe SelectableTileList
  ? #tiles as items
  create #selected as selected
  SelectableTileList
    items = items
    selected = selected
    consume root
      provide tile
  description `tiles that can contain ${SelectableTileList.items}`
