//---------------------------------
// Generic Display Tools
//---------------------------------

particle SelectableList in 'https://$shell/artifacts/Common/source/List.js'
  inout [~a] items
  inout ~a selected
  consume items
    provide set of item
    provide set of action
  description `list that can contain ${items} with selection`


particle SelectableTiles in 'https://$shell/artifacts/Common/source/TileList.js'
  inout [~a] items
  inout ~a selected
  consume tiles
    provide set of tile
    provide set of action
  description `tiling that can contain ${items} with selection`

//---------------------------------
// List Display
//---------------------------------

recipe SelectableList
  use #items as items
  create #selected as selected
  SelectableList
    items = items
    selected = selected
    consume items
      provide item
  description `container for items about ${SelectableList.items}`

//---------------------------------
// Tiled List Display (Selectable)
//---------------------------------

recipe SelectableTiles
  use #tiles as items
  create #selected as selected
  SelectableTiles
    items = items
    selected = selected
    consume tiles
      provide tile
  description `container for tiles about ${SelectableTiles.items}`
